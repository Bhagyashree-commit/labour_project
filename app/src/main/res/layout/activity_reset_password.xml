<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/new_gradient"
    tools:context=".Labour.ResetPassword">
    <RelativeLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/gradient"
        >

        <TextView
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="@string/reset"
            android:textColor="#FFFFFF"></TextView></RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resetpass"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="Enter New Password"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp" ></TextView>



        <LinearLayout
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:hint="@string/newpass"
                app:passwordToggleTint="@color/white"
                app:passwordToggleEnabled="true">


                <EditText
                    android:textColorHint="@color/white"

                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_15sdp"
                    android:maxLength="10"
                    android:textColor="@color/white"
                    android:id="@+id/edit_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"

                    />
            </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:hint="@string/conpass"
                app:passwordToggleTint="@color/white"
                app:passwordToggleEnabled="true"
                >


                <EditText
                    android:id="@+id/edit_conpass"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:imeOptions="actionDone"

                    android:textColorHint="@color/white"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />
            </com.google.android.material.textfield.TextInputLayout>
                   </LinearLayout>


        <Button
            android:id="@+id/btn_resetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/gradient"
            android:text="@string/reset"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"></Button>

    </LinearLayout>


</LinearLayout>
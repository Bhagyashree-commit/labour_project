<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_20"
    android:clickable="true"
    android:focusable="true"

    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"

    card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/md_20"
        >

        <TextView
            android:id="@+id/job_titleapply1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_5"
            android:textSize="@dimen/_13sdp"
            android:text="@string/area"
            android:textColor="@color/colortext" />

        <TextView
            android:maxLines="1"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/job_titleapply"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/job_titleapply1"
            android:text="Apple MacBook Air Core i5 5th Gen"
            android:textColor="@color/colortext" />

        <TextView
            android:id="@+id/job_detailsapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView
            android:id="@+id/job_idapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView
            android:id="@+id/approved_statusall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView
            android:id="@+id/job_wagesapply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_titleapply1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colortext"
            android:text="@string/wages"
            />
        <TextView
            android:id="@+id/job_wagesapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_titleapply"
            android:layout_toRightOf="@id/job_wagesapply1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_13sdp"
            android:maxLines="1"
            android:paddingLeft="@dimen/md_20"
            android:paddingRight="@dimen/md_20"
            android:background="@drawable/gradient"
            android:textColor="@color/colorBackground"
            />
        <TextView
            android:id="@+id/job_areaapply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wagesapply1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/pincode1"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:maxLines="1"
            android:id="@+id/job_areaapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wagesapply"
            android:layout_toRightOf="@id/job_areaapply1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:text="   INR 56990"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:id="@+id/applied_byapply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/applied_byapplyname"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/applieddateapply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_areaapply1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/md_5"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/md_10"
            android:text="@string/dateofappy"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:id="@+id/applieddateapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_areaapply"
            android:textColor="@color/red_900"
            android:layout_toRightOf="@+id/applieddateapply1"
            android:text="INR 56990"
            android:maxLines="1"
            android:layout_marginTop="@dimen/md_5"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applieddateapply"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/red_400"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"/>



        <TextView
            android:id="@+id/createdbyapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/createdbyapplyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/applied_byapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
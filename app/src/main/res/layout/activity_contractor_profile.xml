<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    android:orientation="vertical"
    tools:context=".Contractor.ContractorProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient"
        >

    <TextView
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="@string/contractordashboard"
        android:textColor="#FFFFFF"></TextView></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/bg_shape" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/con_pro"
            />

        <TextView
            android:id="@+id/textfetchusernamecontractor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/registername"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_15sdp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textfetchusernamecontractor"
            android:textColor="@color/colortext"
            android:text="user"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@+id/textfetchusernamecontractor1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_centerInParent="true"
            ></TextView>


        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_id"
            android:id="@+id/textfetchuserIdcontractor1"

                   ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:visibility="gone"
            ></TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_130sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_10sdp"
                app:cardElevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btnjobpost"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/job_post_new"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnjobpost"
                        android:text="@string/pjob"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/fontcolor1"
                        android:textSize="@dimen/_15sdp"
                        /></RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_10sdp"
                app:cardElevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btnprofile"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/con_pro"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnprofile"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/profile"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/fontcolor1"
                        android:textSize="@dimen/_15sdp"
                        /></RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_160sdp">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                app:cardElevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btnconfirmation"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/approve_reject_new"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView91"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnconfirmation"
                        android:text="@string/appreject"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/fontcolor1"
                        android:textSize="@dimen/_15sdp"

                        /></RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                app:cardElevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btnwages"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/wages_new"
                        android:layout_centerHorizontal="true"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView488"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnwages"
                        android:text="@string/wages"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/fontcolor1"
                        android:textSize="@dimen/_15sdp"
                        /></RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_280sdp"
            >
            <LinearLayout
                android:id="@+id/linearLayout34"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/alljobs"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/view_posted_job"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/alljobs"
                            android:text="@string/alljobs"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/fontcolor1"
                            android:textSize="@dimen/_15sdp"
                            />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/paystatus1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/review_new"
                            android:layout_centerHorizontal="true"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView48"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/paystatus1"
                            android:text="@string/review"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/fontcolor1"
                            android:textSize="@dimen/_15sdp"
                            /></RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_400sdp">
            <LinearLayout
                android:id="@+id/linearLayout312"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/btnlivetracklabor"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/tracknew"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnlivetracklabor"
                            android:text="@string/tracklabor"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/fontcolor1"
                            android:textSize="@dimen/_15sdp"
                            /></RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btnlogoutcontractor"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/logout_new"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnlogoutcontractor"
                            android:text="@string/logout"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textAllCaps="true"

                            android:layout_centerHorizontal="true"
                            android:textColor="@color/fontcolor1"
                            android:textSize="@dimen/_15sdp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
    </LinearLayout>
</ScrollView>
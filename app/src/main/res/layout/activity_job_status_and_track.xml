<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_200"
    tools:context=".Labour.jobStatusAndTrack">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_200"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient"
        >

        <TextView
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="@string/jobstatus"
            android:textColor="#FFFFFF"></TextView></RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fetchname1"
                android:visibility="invisible"
                android:text="Registerd Name :"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fetchname"
                android:visibility="invisible"
                android:text="username"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idstatus"
                android:visibility="invisible"
               ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/area"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tv123"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/orange_900"></TextView>
            <EditText
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jobtitle1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/fetchjobtitlestatus"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colortext"
                ></EditText>



            <TextView
                android:visibility="gone"
                android:id="@+id/tv13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/jobdetails1"
                android:textColor="@color/orange_900"></TextView>
            <EditText
                android:visibility="gone"
                android:editable="false"
                android:id="@+id/fetchjobdetailsstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/jobdetails1"
                android:textColor="@color/colortext"></EditText>


            <TextView
                android:id="@+id/tv14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pincode1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/orange_900"
                android:textSize="@dimen/_15sdp"></TextView>
            <EditText
                android:editable="false"
                android:id="@+id/fetchjobareastatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/tv14"
                android:text="@string/jobarea1"
                android:textColor="@color/colortext"
                android:textSize="@dimen/_15sdp"></EditText>


            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jobwages1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/orange_900"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:editable="false"
                android:id="@+id/fetchjobwagesstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/tv2"
                android:textColor="@color/colortext"
                android:textSize="@dimen/_15sdp"></EditText>

            <TextView
                android:id="@+id/tv25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contractorname"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/orange_900"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:editable="false"
                android:id="@+id/approvedbystatusname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv25"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colortext"
                android:textSize="@dimen/_15sdp"></EditText>

      <TextView
        android:id="@+id/approvedbystatus"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>


        <Button
            android:id="@+id/btn_start_location_updates"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:background="@drawable/capsulebutton"
            android:textColor="@color/colorBackground"
            >

        </Button>

        <Button
            android:id="@+id/btn_stop_location_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="Stop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            android:text="Your Location is Beeing Traced Click Stop to Stop Tracing" />

        <TextView
            android:id="@+id/location_result"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/green_600"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/updated_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:textSize="11dp" />

    </LinearLayout>
</LinearLayout>
</ScrollView>
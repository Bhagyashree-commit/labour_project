<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Owner.PostJobOwner"
    android:background="@color/blue_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradient"
            >

            <TextView
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_centerInParent="true"
                android:text="@string/postjob"
                android:textColor="#FFFFFF"></TextView></RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:id="@+id/imageglobal"
                android:layout_gravity="center"
                android:src="@drawable/logof"></ImageView>


        </LinearLayout>


        <LinearLayout
            android:background="@drawable/square_box"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/md_25">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/jobposting"
                app:hintTextAppearance="@style/CustomTextAppearance1"
                android:textColorHint="@color/black">

                <EditText
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:textSize="@dimen/_13sdp"
                    android:inputType="textCapCharacters"
                    android:gravity="center"
                    android:id="@+id/editjobttitleowner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:capitalize="words"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/md_25">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/jobdetails"
                app:hintTextAppearance="@style/CustomTextAppearance1"
                android:textColorHint="@color/black">

                <EditText
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:imeOptions="actionDone"
                    android:maxLines="10"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:inputType="textCapCharacters"
                    android:id="@+id/editjobdetailsowner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:capitalize="words"


                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_box"
            android:layout_marginTop="@dimen/md_25">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/scope"
                app:hintTextAppearance="@style/CustomTextAppearance1"
                android:textColorHint="@color/black">

                <EditText
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:background="@null"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:inputType="textCapCharacters"
                    android:backgroundTint="@null"
                    android:id="@+id/editjobwagesowner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:capitalize="words"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_35sdp"
            android:background="@drawable/square_box"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/md_25">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/jobarea"
                app:hintTextAppearance="@style/CustomTextAppearance1"
                android:textColorHint="@color/black">

                <EditText
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:capitalize="words"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:inputType="number"
                    android:id="@+id/editjobareaowner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"


                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:text="@string/postjob"
            android:layout_width="@dimen/_150sdp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/submijobdataowner"
            android:layout_margin="25dp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"
            android:textColor="#ffffff"
            android:background="@drawable/capsulebutton"
            ></Button>
    </LinearLayout>
</ScrollView>
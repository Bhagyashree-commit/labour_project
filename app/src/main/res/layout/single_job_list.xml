<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/md_20"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/colorAccent"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/background"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="@dimen/md_15"
        card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        >
        <TextView
            android:id="@+id/job_title1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_5"
            android:text="@string/jobarea1"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colortext" />
        <TextView
            android:textSize="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/role"></TextView>
        <TextView
            android:id="@+id/job_title"
            android:textSize="@dimen/_13sdp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_5"
            android:layout_toRightOf="@id/job_title1"
            android:text="Apple MacBook Air Core i5 5th Gen"
            android:textColor="@color/colortext" />

        <TextView
            android:id="@+id/job_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/job_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
          />

        <TextView
            android:id="@+id/job_wages1"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_title1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/md_25"
            android:textColor="@color/colortext"
            android:text="@string/wages"
            />

        <TextView
            android:id="@+id/job_wages"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_title1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/md_25"
            android:layout_toRightOf="@id/job_wages1"
            android:background="@drawable/gradient"
            android:paddingLeft="@dimen/md_20"
            android:paddingRight="@dimen/md_20"
            android:textColor="@color/colorBackground"
             />

        <TextView
            android:id="@+id/job_area1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wages1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:text="@string/datee"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/job_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wages"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/colortext"
            android:layout_toRightOf="@id/job_area1"
            android:text="INR 56990"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:id="@+id/createdby1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_area1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:text="@string/jobpostedby"
            android:textSize="@dimen/_13sdp"/>

       <TextView
            android:id="@+id/createdby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:visibility="invisible"/>
        <TextView
            android:id="@+id/createdbyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_area"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:layout_toRightOf="@id/createdby1"
            android:text="INR 56990"
            android:singleLine="true"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createdbyname"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right|bottom"
            android:textStyle="bold"
            android:textColor="@color/red_400"
            android:text="@string/dateofappy"
            android:textSize="@dimen/_13sdp"/>
         <TextView
             android:visibility="gone"
             android:id="@+id/date"
             android:layout_width="wrap_content"
             android:layout_toRightOf="@id/date1"
             android:layout_height="@dimen/_20sdp"
             android:layout_below="@id/createdbyname"
             android:layout_marginTop="5dp"
             android:textStyle="bold"
             android:textColor="@color/red_400"
             android:text="INR 56990"
             android:singleLine="true"
             android:textSize="@dimen/_13sdp"/>
        <Button
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/applyforjob"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/date"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:background="@drawable/greencapsule"
            android:text="@string/acceptjob"
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/applystatus"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/date"
            android:textColor="@color/green_600"
            android:layout_marginTop="15dp"
            android:text="@string/applystatus"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_200"
    android:layout_height="match_parent"
    tools:context=".Developer.DevJObOffer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient"
        >

        <TextView
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:text="@string/joboffer"
            android:textColor="#FFFFFF"></TextView></RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textcongooffer"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:textColor="@color/colortext"
        android:text="@string/latestjob"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_50sdp"
        tools:ignore="MissingConstraints"></TextView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewDev"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_below="@+id/textcongooffer"
        android:layout_margin="@dimen/_15sdp" />

</LinearLayout>
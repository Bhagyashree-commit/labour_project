<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_gradient"
    tools:context=".Labour.MainActivityLaourLogin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp">

        <!--  <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Admin Login"
              android:id="@+id/linktoadminlogin"
              android:textColor="@color/btnPressedColor"></TextView>-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="105dp"
            android:layout_gravity="center"
            android:layout_marginBottom="55dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageglobal"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:src="@drawable/logof" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btnPressedColor"
            android:layout_marginBottom="@dimen/md_15"
            android:layout_gravity="center"></TextView>


        <LinearLayout
            android:id="@+id/llMain"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="@dimen/md_25"
                android:layout_marginRight="@dimen/md_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:tint="@color/white"
                    android:layout_marginTop="@dimen/_25sdp"
                    app:srcCompat="@drawable/mob"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <EditText
                    android:visibility="gone"
                    android:editable="false"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:text="+91"
                    android:layout_marginRight="@dimen/_minus10sdp"
                    android:backgroundTint="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></EditText>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:id="@+id/textInputLayoutEmail"
                    android:hint="@string/mobnum">

                    <EditText
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:id="@+id/editTextLoginName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLines="1"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="@dimen/md_25"
                android:layout_marginLeft="@dimen/md_25"
                android:layout_marginRight="@dimen/md_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:tint="@color/white"
                    android:layout_marginTop="@dimen/_25sdp"
                    app:srcCompat="@drawable/password"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    app:passwordToggleTint="@color/white"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:textColorHint="@color/white"
                    android:id="@+id/textInputLayoutPassword"
                    app:passwordToggleEnabled="true">



                    <EditText
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:id="@+id/editTextLoginpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:inputType="textPassword"

                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgetpass"
                android:textSize="@dimen/_15sdp"
                android:text="@string/forgetpass"
                android:textColor="@color/white"
                android:layout_gravity="end"></TextView>
        </LinearLayout>
        <Button
            android:text="@string/login"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/button_loginapp122"
            android:layout_margin="@dimen/_15sdp"
            android:textColor="@color/colorBackground"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:background="@drawable/capsulebutton"/>



        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:id="@+id/pgb1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/md_25"
            android:gravity="center"

            >
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_new_user1"
                android:text="@string/newuser"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/red_900"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
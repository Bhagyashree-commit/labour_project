<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_200"
    tools:context=".Labour.LabourDashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradient"
            >

            <TextView
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="@string/laborprofile"
                android:textColor="#FFFFFF"></TextView></RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:text="@string/welcomelabor"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/square_box"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mobnum"
                android:textColorHint="@color/black"
                app:hintTextAppearance="@style/CustomTextAppearance1">

                <EditText
                    android:id="@+id/etlabour_mobilenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:digits="0123456789"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:hintTextAppearance="@style/CustomTextAppearance1"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/messageTextInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textactivitytype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center"

                    android:text="@string/gender" />

                <RadioGroup
                    android:id="@+id/radiogroupgender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_span="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/male"
                        android:textSize="@dimen/_15sdp"></RadioButton>

                    <RadioButton
                        android:id="@+id/radio_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:textSize="@dimen/_15sdp"></RadioButton>

                </RadioGroup>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/age"
                android:textColorHint="@color/black"
                >

                <EditText
                    android:id="@+id/etlabour_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:hintTextAppearance="@style/CustomTextAppearance1"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"

            android:background="@drawable/square_box">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/addresspin"
                android:textColorHint="@color/black"
                >

                <EditText
                    android:id="@+id/etlabour_postaladdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:capitalize="words"
                    android:singleLine="true"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"


                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            app:hintTextAppearance="@style/CustomTextAppearance1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">


            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/background"
                android:gravity="center"
                android:hint="@string/category"
                android:popupBackground="@color/background"
                android:scrollbars="vertical"
                android:spinnerMode="dialog"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">


            <Spinner
                android:id="@+id/wageratespinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/background"

                android:gravity="center"
                android:hint="@string/wage"
                android:popupBackground="@color/background"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/workinghourspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/background"
                android:gravity="center"

                android:hint="@string/workinghoursite"
                android:popupBackground="@color/background"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
               />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/category_modeoftransport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"

                android:background="@color/background"
                android:gravity="center"
                android:hint="@string/transport"
                android:popupBackground="@color/background"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/messageTextInputLayout9"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:textColorHint="@color/black"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textactivitytyp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="@string/workmode"

                    android:textColor="@color/black"
                    />

                <RadioGroup
                    android:id="@+id/radiogroupinterestworkon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                  >

                    <RadioButton
                        android:id="@+id/radio_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/daily"
                        android:textSize="@dimen/_13sdp"></RadioButton>

                    <RadioButton
                        android:id="@+id/radio_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly"
                        android:textSize="@dimen/_13sdp"></RadioButton>

                    <RadioButton
                        android:id="@+id/radio_monthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly"
                        android:textSize="@dimen/_13sdp"></RadioButton>

                </RadioGroup>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/particulararea1"
                android:textColorHint="@color/black"
               >

                <EditText
                    android:id="@+id/etlabour_workingarea1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:capitalize="words"
                    android:gravity="center"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"

                    tools:ignore="MissingConstraints"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/particulararea2"
                android:textColorHint="@color/black"
                >

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etlabour_workingarea2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:capitalize="words"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                      tools:ignore="MissingConstraints"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/refrename"
                android:textColorHint="@color/black"
                >

                <EditText
                    android:id="@+id/edit_refrename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:capitalize="words"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="@drawable/square_box"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/refcode"
                android:textColorHint="@color/black"
                >

                <EditText
                    android:id="@+id/edit_refrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_margin="@dimen/_5sdp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:capitalize="words"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:textColor="@color/black"

                    tools:ignore="MissingConstraints"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_submitlabordata"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_18sdp"
            android:background="@drawable/capsulebutton"
            android:text="@string/submit"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"></Button>


    </LinearLayout>
    </LinearLayout>
</ScrollView>